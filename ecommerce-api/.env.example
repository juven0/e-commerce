
# =====================================================
# Variables d'environnement E-commerce API
# Copier ce fichier en .env et remplir les valeurs
# =====================================================

# Application
APP_NAME="E-commerce API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
API_V1_PREFIX="/api/v1"

# Server
HOST="0.0.0.0"
PORT=8000

# Database MySQL/MariaDB
DATABASE_URL="mysql+asyncmy://user:password@localhost:3306/ecommerce_db"
DB_HOST="localhost"
DB_PORT=3306
DB_USER="ecommerce_user"
DB_PASSWORD="your_secure_password_here"
DB_NAME="ecommerce_db"
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Security & JWT
SECRET_KEY="your-secret-key-here-change-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# CORS (Cross-Origin Resource Sharing)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"
ALLOWED_METHODS="GET,POST,PUT,DELETE,PATCH"
ALLOWED_HEADERS="*"

# Redis Cache
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
CACHE_ENABLED=True
CACHE_TTL=300

# Email Configuration
MAIL_SERVER="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME="your-email@gmail.com"
MAIL_PASSWORD="your-app-password"
MAIL_FROM="noreply@ecommerce.com"
MAIL_FROM_NAME="E-commerce"
MAIL_TLS=True
MAIL_SSL=False

# File Upload
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE=5242880  # 5MB en bytes
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,webp"

# Payment Gateways
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

PAYPAL_MODE="sandbox"  # sandbox ou live
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"

# Sentry (Error Tracking)
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE=0.1

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3000"

# Admin
ADMIN_EMAIL="admin@ecommerce.com"
ADMIN_PASSWORD="admin123"  # Ã€ changer en production !

# Celery (Background Tasks)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Session
SESSION_SECRET_KEY="your-session-secret-key-here"
SESSION_MAX_AGE=86400  # 24 heures

# Testing
TEST_DATABASE_URL="mysql+asyncmy://test_user:test_pass@localhost:3306/test_ecommerce_db"